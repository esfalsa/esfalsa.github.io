---
import ArrowUpRight from "./ArrowUpRight.astro";

export interface Props {
	href: string;
	title: string;
	description: string | string[];
	technologies?: string[];
}
const { href, title, description, technologies } = Astro.props;
---

<a
	{href}
	target="_blank"
	rel="noopener noreferrer"
	class="group block overflow-hidden rounded-lg bg-red-500 bg-gradient-to-br from-brand-500 via-violet-500 to-fuchsia-700 shadow-lg shadow-brand-950 transition duration-200 hover:shadow-lg hover:shadow-brand-900"
>
	<div
		class="h-full w-full bg-gray-800 p-px transition duration-200 hover:bg-opacity-0"
	>
		<div
			class="relative h-full w-full rounded-[calc(0.5rem-0.8px)] bg-gray-950 p-4"
		>
			<ArrowUpRight
				class="absolute right-4 h-5 w-5 text-transparent transition duration-200 group-hover:text-gray-300"
			/>
			<h3
				class="mb-2 text-lg font-semibold leading-tight text-brand-400 transition duration-200 group-hover:text-brand-300"
			>
				{title}
			</h3>
			{
				Array.isArray(description) ?
					description.map((paragraph) => (
						<p class="text-sm text-gray-300 transition duration-200 group-hover:text-gray-100">
							{paragraph}
						</p>
					))
				:	<p class="text-sm text-gray-300 transition duration-200 group-hover:text-gray-100">
						{description}
					</p>
			}
			{
				technologies && (
					<div class="mt-4 space-x-3 font-mono text-xs font-semibold text-gray-400">
						{technologies.map((technology) => (
							<span class="inline-block rounded-md border border-gray-800 px-2 py-1">
								{technology}
							</span>
						))}
					</div>
				)
			}
		</div>
	</div>
</a>
