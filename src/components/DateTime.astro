---
interface Props {
	date: string;
	display?: Intl.DateTimeFormatOptions;
}
const { date: dateString, display = { month: "long", year: "numeric" } } =
	Astro.props;

const date = new Date(dateString);

const datetime = date.toISOString().split("T")[0];
const title = date.toLocaleDateString("en-US", {
	month: "long",
	day: "numeric",
	year: "numeric",
});
const text = date.toLocaleDateString("en-US", display);
---

<time {datetime} {title}>{text}</time>
