---
interface Props {
	date: ConstructorParameters<typeof Date>[0];
	display?: Intl.DateTimeFormatOptions;
	class?: string;
}
const {
	date: dateString,
	display = { month: "long", year: "numeric" },
	class: className,
} = Astro.props;

const date = new Date(dateString);

const datetime = date.toISOString().split("T")[0];
const title = date.toLocaleDateString("en-US", {
	month: "long",
	day: "numeric",
	year: "numeric",
});
const text = date.toLocaleDateString("en-US", display);
---

<time {datetime} {title} class={className}>{text}</time>
