---
import { execSync } from "node:child_process";
import Link from "./Link.astro";

const updated = new Date().toLocaleString("en-US", {
	timeZone: "America/New_York",
	month: "long",
	day: "numeric",
	year: "numeric",
});
const sha = execSync("git rev-parse HEAD", {
	encoding: "utf-8",
}).trim();
---

<footer class="mt-48 w-full px-8">
	<div class="mx-auto max-w-prose">
		<hr class="-mx-4 border-t border-t-gray-800" />
		<div class="flex flex-row items-center pb-24 pt-16">
			<div
				class="flex-1 text-left font-handwriting text-2xl font-medium text-brand-200"
			>
				<a href="/">Pronoun</a>
			</div>
			<div class="flex-1 text-right text-sm font-light">
				updated <Link
					href={`https://github.com/esfalsa/esfalsa.github.io/commit/${sha}`}
					color={false}
					class="text-white"
				>
					{updated}
				</Link>
			</div>
		</div>
	</div>
</footer>
