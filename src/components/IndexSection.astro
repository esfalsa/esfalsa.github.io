---
interface Props {
	subtitle?: string;
	title: {
		name: string;
		href: string;
		prefix?: string;
		postfix?: string;
	};
}
const { subtitle, title } = Astro.props;
---

<div class="my-24">
	{
		subtitle && (
			<h3 class="mb-2 text-xl font-medium text-brand-400">{subtitle}</h3>
		)
	}
	<h2 class="mb-4 text-3xl font-bold">
		<a href={title.href} class="group">
			<span class="text-brand-300/75 transition group-hover:text-brand-300/90"
				>$</span
			>
			<!--
        inline-block and whitespace-pre-wrap are needed to preserve whitespace in
        titlePrefix and titlePostfix, otherwise Prettier would add significant
        newlines producing extra spaces
        see: https://github.com/withastro/prettier-plugin-astro/issues/308
      -->
			{
				title.prefix && (
					<span class="inline-block text-gray-500 transition group-hover:text-gray-400">
						<span class="whitespace-pre-wrap">{title.prefix}</span>
					</span>
				)
			}<span
				class="font-extrabold text-gray-100 underline decoration-transparent decoration-4 underline-offset-8 transition group-hover:text-white group-hover:decoration-brand-300/50"
				>{title.name}</span
			>{
				title.postfix && (
					<span class="inline-block text-gray-500 transition group-hover:text-gray-400">
						<span class="whitespace-pre-wrap">{title.postfix}</span>
					</span>
				)
			}
		</a>
	</h2>
	<div class="space-y-4 text-gray-200">
		<slot />
	</div>
</div>
