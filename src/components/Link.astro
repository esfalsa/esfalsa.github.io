---
interface Props {
	href: string;
	class?: string;
	color?: boolean;
}
const { href, class: className, color = true } = Astro.props;
---

<a
	href={href}
	class:list={[
		className,
		color && "text-brand-400 hover:text-brand-300",
		"font-medium underline decoration-transparent decoration-2 underline-offset-4 transition hover:decoration-brand-300/50 active:text-brand-500",
	]}><slot /></a
>
